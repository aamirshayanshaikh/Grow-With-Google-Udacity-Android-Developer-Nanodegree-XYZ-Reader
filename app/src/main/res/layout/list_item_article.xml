<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="@dimen/list_item_bottom_margin"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_thumbnail_height"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:id="@+id/ll_list_item_text_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/medgray"
            android:orientation="vertical">

        <TextView
                android:id="@+id/article_title"
                android:fontFamily="@font/merriweather_sans_bolditalic"
                android:textSize="@dimen/list_item_title_textsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_item_text_general_padding"
                android:paddingTop="@dimen/list_item_text_general_padding"
                android:paddingRight="@dimen/list_item_text_general_padding"
                android:paddingBottom="@dimen/list_item_text_internal_bottom_padding"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                tools:text="Article Title"
                android:maxLines="4"/>

        <TextView
                android:id="@+id/article_subtitle"
                android:fontFamily="@font/merriweather_sans_regular"
                android:textSize="@dimen/list_item_subtitle_textsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_item_text_general_padding"
                android:paddingRight="@dimen/list_item_text_general_padding"
                android:paddingBottom="@dimen/list_item_text_general_padding"
                android:textColor="@android:color/white"
                android:maxLines="2"
                tools:text="Author and Date"
                android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>